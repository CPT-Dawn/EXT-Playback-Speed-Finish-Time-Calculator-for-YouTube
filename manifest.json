{
  "manifest_version": 3,
  "name": "YouTube Video Info",
  "version": "1.0",
  "description": "Displays YouTube video playback info",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}